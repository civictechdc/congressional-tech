# ~/.bashrc: executed by bash(1) for non-login shells.

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# History settings
HISTCONTROL=ignoreboth
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000

# Check window size after each command
shopt -s checkwinsize

# Enable color support
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Colored prompt
if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi

# Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Congressional Tech specific aliases
alias ct-app='cd /workspaces/congressional-tech/app'
alias ct-youtube='cd /workspaces/congressional-tech/projects/1.2-committee-youtube/python'
alias ct-inflation='cd /workspaces/congressional-tech/projects/5.1-inflation-gsheets'
alias ct-root='cd /workspaces/congressional-tech'

# Add user Python bin to PATH if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Enable programmable completion features
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

echo "üèõÔ∏è  Welcome to Congressional Tech development environment!"
echo "üìÅ Quick navigation aliases:"
echo "   ct-root    - Navigate to project root"
echo "   ct-app     - Navigate to Next.js app"
echo "   ct-youtube - Navigate to YouTube data project"
echo "   ct-inflation - Navigate to inflation data project"
